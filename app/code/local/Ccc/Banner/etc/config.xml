<?xml version="1.0"?>
<config>
  <modules>
    <Ccc_Banner>
      <version>0.1.0</version>
    </Ccc_Banner>
  </modules>
  <admin>
    <routers>
      <adminhtml>
        <args>
          <modules>
            <Ccc_Banner before="Mage_Adminhtml">Ccc_Banner_Adminhtml</Ccc_Banner>
          </modules>
        </args>
      </adminhtml>
    </routers>
  </admin>
  <adminhtml>
    <layout>
      <updates>
        <ccc_banner>
          <file>banner.xml</file>
        </ccc_banner>
      </updates>
    </layout>
  </adminhtml>
  <global>
    <blocks>
      <ccc_banner>
        <class>Ccc_Banner_Block</class>
      </ccc_banner>
    </blocks>
    <models>
      <ccc_banner>
        <class>Ccc_Banner_Model</class>
        <resourceModel>ccc_banner_resource</resourceModel>
      </ccc_banner>
      <ccc_banner_resource>
        <class>Ccc_Banner_Model_Resource</class>
        <entities>
          <banner>
            <table>ccc_banner</table>
          </banner>
        </entities>
      </ccc_banner_resource>
    </models>
    <resources>
      <banner_setup>
        <setup>
          <module>Ccc_Banner</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </banner_setup>
    </resources>
    <helpers>
      <banner>
        <class>Ccc_Banner_Helper</class>
      </banner>
    </helpers>
  </global>
</config>