<?xml version="1.0"?>
<config>
    <modules>
        <Practice_Product>
            <version>0.1.3</version>
        </Practice_Product>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Practice_Product before="Mage_Adminhtml">Practice_Product_Adminhtml</Practice_Product>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <practice_product>
                    <file>practice_product.xml</file>
                </practice_product>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <blocks>
            <practice_product>
                <class>Practice_Product_Block</class>
            </practice_product>
        </blocks>
        <helpers>
            <practice_product>
                <class>Practice_Product_Helper</class>
            </practice_product>
        </helpers>
        <models>
            <practice_product>
                <class>Practice_Product_Model</class>
                <resourceModel>practice_product_resource</resourceModel>
            </practice_product>
            <practice_product_resource>
                <class>Practice_Product_Model_Resource</class>
                <entities>
                    <product>
                        <table>practice_product</table>
                    </product>
                    <category>
                        <table>practice_categorys</table>
                    </category>
                </entities>
            </practice_product_resource>
        </models>
        <resources>
            <practice_product_setup>
                <setup>
                    <module>Practice_Product</module>
                    <!-- <class>Mage_Core_Model_Resource_Setup</class> -->
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </practice_product_setup>
        </resources>
        <events>
            <practice_product_save_before>
                <observers>
                    <product__save_before>
                        <type>singleton</type>
                        <class>practice_product/observer</class>
                        <method>customPrice</method>
                    </product__save_before>
                </observers>
            </practice_product_save_before>
        </events>    
    </global>
    <crontab>
        <jobs>
            <product>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>practice_product/observer::demo</model>
                </run>
            </product>
        </jobs>
    </crontab>
</config>