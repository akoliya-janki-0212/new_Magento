<layout>

    <adminhtml_test_index>
        <reference name="content">
            <block type="practice_test/adminhtml_test" name="test" />
        </reference>
        <reference name="head">
            <action method="addJs">
                <script>test/grid.js</script>
            </action>
        </reference>
    </adminhtml_test_index>
    <adminhtml_test_new>
        <update handle="adminhtml_test_edit" />
    </adminhtml_test_new>
    <adminhtml_test_edit>
        <update handle="editor" />
        <reference name="content">
            <block type="practice_test/adminhtml_test_edit" name="test_edit"></block>
        </reference>
        <reference name="left">
            <block type="practice_test/adminhtml_test_edit_tabs" name="test_edit_tabs">
                <block type="practice_test/adminhtml_test_edit_tab_test1" name="test_edit_tab_test1" />
                <block type="practice_test/adminhtml_test_edit_tab_test2" name="test_edit_tab_test2" />
                <block type="practice_test/adminhtml_test_edit_tab_test3" name="test_edit_tab_test3" />
                <action method="addTab">
                    <name>test1</name>
                    <block>test_edit_tab_test1</block>
                </action>
                <action method="addTab">
                    <name>test2</name>
                    <block>test_edit_tab_test2</block>
                </action>
                <action method="addTab">
                    <name>test3</name>
                    <block>test_edit_tab_test3</block>
                </action>
            </block>
        </reference>
    </adminhtml_test_edit>

</layout>
    